<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_title_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/common_title_relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bar_top">

        <TextView
            android:id="@+id/common_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="9"
            android:maxLength="9"
            android:singleLine="true"
            android:text="title"
            android:textColor="@color/white"
            android:textSize="34px"/>

        <Button
            android:id="@+id/left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17px"
            android:background="@drawable/common_back_down_up"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:paddingLeft="25px"
            android:text="left"
            android:textColor="@color/white"
            android:textSize="22px"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="23px"
            android:background="@drawable/common_right_down_up"
            android:gravity="center"
            android:text="right"
            android:textColor="@color/white"
            android:textSize="22px"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/right_little_button"
            android:layout_width="59px"
            android:layout_height="58px"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:layout_toLeftOf="@id/right_button"
            android:background="@drawable/common_right_down_up"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>